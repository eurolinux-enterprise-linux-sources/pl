#!/bin/csh -f
# Create xpce executable

if ( $#argv != 2 ) then
  echo "Usage: dump emulator state"
  exit 1
endif

set emulator = $1
set xpce     = $2

$emulator -f none << _EOS_
['../load'].
save_program('$xpce',
	[ goal		= 'pce_host:pce_banner'
	]).

get(@pce, home, Home),
concat(Home, '/prolog/lib', PceLib),
make_library_index(PceLib).


halt.
_EOS_
